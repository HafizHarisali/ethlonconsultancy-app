
@{
    ViewBag.Title = "EditCV";
    Layout = "~/Views/Shared/Front.cshtml";
}


<html>
<head>
    <title>Ethlon Consultancy | Applicants CV</title>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <style>
        .form-control {
            border-radius: 0px;
            background-color: transparent;
        }
    </style>
    <style>
        input[type=checkbox] + label {
            display: block;
            margin: 0.2em;
            cursor: pointer;
            padding: 0.2em;
        }

        input[type=checkbox] {
            display: none;
        }

            input[type=checkbox] + label:before {
                content: "\2714";
                border: 0.1em solid #000;
                border-radius: 0.2em;
                display: inline-block;
                width: 1.5em;
                height: 1.5em;
                padding-left: 0.2em;
                padding-bottom: 0.3em;
                margin-right: 0.2em;
                vertical-align: bottom;
                color: transparent;
                transition: .2s;
            }

            input[type=checkbox] + label:active:before {
                transform: scale(0);
            }

            input[type=checkbox]:checked + label:before {
                background-color: MediumSeaGreen;
                border-color: MediumSeaGreen;
                color: #fff;
            }

            input[type=checkbox]:disabled + label:before {
                transform: scale(1);
                border-color: #aaa;
            }

            input[type=checkbox]:checked:disabled + label:before {
                transform: scale(1);
                background-color: #bfb;
                border-color: #bfb;
            }
    </style>
    <script>
        function getselectitem(ddl)
        {
            var ddl = ddl.children;

            for (var i = 0; i < ddl.length; i++) {
                if(ddl[i].selected == true)
                {
                    return ddl[i].innerText;
                }
            }
        }

        window.onload = function () {
            document.getElementById('msubject').value = '';
            document.getElementById('qualstatuscol').style.display = 'block';
            document.getElementById('doqual').style.display = 'block';
            document.getElementById('nopleft').style.display = 'none';
            document.getElementById('gpa').style.display = 'none';
            document.getElementById('uni').style.display = 'none';
            document.getElementById('msubjectcol').style.display = 'none';
            //document.getElementById('bemsubjectcol').style.display = 'none';
            document.getElementById('osubject').style.display = 'none';
            document.getElementById('expstatuscol').style.display = 'block';
            document.getElementById('noyme').style.display = 'block';
            document.getElementById('organiname').style.display = 'block';
        };

        function Qual_On_Change()
        {
            var qual = document.getElementById('qual');
            var qualstat=document.getElementById('qualstatus');

            if(qual.value=="ACCA" || qual.value=="CA(CAF)")
            {
                document.getElementById('nopleft').style.display = 'none';
                document.getElementById('gpa').style.display = 'none';
                document.getElementById('uni').style.display = 'none';
                document.getElementById('msubjectcol').style.display = 'none';
                //document.getElementById('bemsubjectcol').style.display = 'none';
                document.getElementById('qualstatuscol').style.display = 'block';
                document.getElementById('doqual').style.display = 'block';
                document.getElementById('postgpa').value = '';
                document.getElementById('msubject').value = '';
                //document.getElementById('bemsubject').value = '';
                document.getElementById('qualstatus').value = '';
                document.getElementById('postuni').value = '';
                document.getElementById('postnopl').value = '';
                document.getElementById('postdoq').value = '';

                document.getElementById('osubject').style.display = 'none';

                if (qualstat.value == "Yes") {
                    document.getElementById('nopleft').style.display = 'none';
                    document.getElementById('doqual').style.display = 'block';
                }

                else if (qualstat.value == "No") {
                    document.getElementById('doqual').style.display = 'none';
                    document.getElementById('nopleft').style.display = 'block';
                }
            }
            else if(qual.value=="BBA" || qual.value=="MBA")
            {
                document.getElementById('msubject').value = '';
                document.getElementById('bemoption').style.display = 'none';
                document.getElementById('bemoption2').style.display = 'none';
                document.getElementById('bemoption3').style.display = 'none';
                document.getElementById('moption').style.display = 'block';
                document.getElementById('moption2').style.display = 'block';
                document.getElementById('moption3').style.display = 'block';
                document.getElementById('moption4').style.display = 'block';
                document.getElementById('doqual').style.display = 'none';
                document.getElementById('qualstatuscol').style.display = 'none';
                //document.getElementById('bemsubjectcol').style.display = 'none';
                document.getElementById('osubject').style.display = 'none';
                document.getElementById('gpa').style.display = 'block';
                document.getElementById('uni').style.display = 'block';
                document.getElementById('msubjectcol').style.display = 'block';
                document.getElementById('qualstatus').value = '';
            }

            else if(qual.value=="B.Engineering")
            {
                document.getElementById('msubject').value = '';
                document.getElementById('moption').style.display = 'none';
                document.getElementById('moption2').style.display = 'none';
                document.getElementById('moption3').style.display = 'none';
                document.getElementById('moption4').style.display = 'none';
                document.getElementById('bemoption').style.display = 'block';
                document.getElementById('bemoption2').style.display = 'block';
                document.getElementById('bemoption3').style.display = 'block';
                document.getElementById('doqual').style.display = 'none';
                document.getElementById('qualstatuscol').style.display = 'none';
                document.getElementById('osubject').style.display = 'none';
                document.getElementById('gpa').style.display = 'block';
                document.getElementById('uni').style.display = 'block';
                document.getElementById('msubjectcol').style.display = 'block';
                //document.getElementById('bemsubjectcol').style.display = 'block';
                document.getElementById('qualstatus').value = '';
            }

        }

        function Qualstatus_On_Change()
        {
            var qualstatus = document.getElementById('qualstatus');
            if(qualstatus.value=="Qualified")
            {
                document.getElementById('nopleft').style.display = 'none';
                document.getElementById('doqual').style.display = 'block';
            }

            else {

                document.getElementById('doqual').style.display = 'none';
                document.getElementById('nopleft').style.display = 'block';
            }
        }

        function Msubject_On_Change()
        {
            var msubject = document.getElementById('msubject');
            if(msubject.value=="others")
            {
                document.getElementById('osubject').style.display = 'block';
            }
            else {

                document.getElementById('osubject').style.display = 'none';
            }

        }


        function Exp_On_Change()
        {
            var expstatus = document.getElementById('expstatus');
            if(expstatus.value=="Yes")
            {

                document.getElementById('noyme').style.display = 'block';
                document.getElementById('organiname').style.display = 'block';
            }

            else {
                document.getElementById('postnoyme').value = '';
                document.getElementById('noyme').style.display = 'none';
                document.getElementById('organiname').style.display = 'none';
            }
        }
        $(document).ready(function () {
            var getadvance = document.getElementById('getadvancequalification').value;
            var getqualification = document.getElementById('getacademicqualification').value;
            var getpostnoyme = document.getElementById('getpostnoyme').value;

            document.getElementById('advanceacademicqualification').value = getadvance;
            document.getElementById('academicqualification').value = getqualification;
            document.getElementById('postnoyme').value = getpostnoyme;
        });
    </script>
    
</head>
<body style="background-color:floralwhite;">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h3 class="text-center">Create Your Professional CV</h3>
            <p style="border-bottom:2px solid orange;width:30%;margin-left:170px;"></p>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="container" style="margin-top:30px;background-color:white;padding:20px;background-color: white;box-shadow: 2px 3px 5px 3px #808080;">


        @using (Html.BeginForm("EditCV", "Applicantinfo", FormMethod.Post))
        {
            foreach (var item in ViewBag.info)
            {
            <div class="row">
                <input type="hidden" name="id" value="@item.Id" />
                <input type="hidden" name="appid" value="@item.Applicantid" />
                <h4 class="text-uppercase" style="margin-left:34px;">Personal Information</h4>
                <div class="col-md-12 mt-lg">
                    <div class="col-md-4">
                        <label>Name</label>
                        <input type="text" name="name" id="postname" value="@item.Name" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label>Email</label>
                        <input type="email" name="email" id="postemail" value="@item.Email" class="form-control" required />
                    </div>
                    <div class="col-md-4">
                        <label>Address</label>
                        <input type="text" name="address" id="address" value="@item.Address" class="form-control" required />
                    </div>
                </div>
            </div>

                <div class="row">
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-4">
                            <label>Contact No</label>
                            <input type="text" name="contactno" id="contactno" value="@item.Contactno" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label>Age</label>
                            <input type="text" name="dob" min="18" max="100" id="postdob" value="@item.Age" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label>Current College/Institute Name</label>
                            <input type="text" name="referby" id="postreferby" value="@item.ReferBy" class="form-control" required />
                        </div>

                    </div>
                </div>
                <hr style="width:1100px;" />
                <div class="row">
                    <h4 class="text-uppercase" style="margin-left:34px;">Academic Information</h4>
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-3">
                            <label>School Name</label>
                            <input type="text" name="schoolname" id="schoolname" value="@item.Schoolname" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label>College Name</label>
                            <input type="text" name="collegename" id="collegename" value="@item.Collegename" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label>Academic Qualification</label>
                            <select name="academicqualification" id="academicqualification" value="" class="form-control" required>
                                <option value="Matric">Matric</option>
                                <option value="O/A Levels">O Levels</option>
                            </select>
                            <input type="hidden" id="getacademicqualification" value="@item.AcadQual" />
                        </div>
                        <div class="col-md-3">
                            <label>Advance Academic Qualification</label>
                            <select name="advanceacademicqualification" id="advanceacademicqualification" value="" class="form-control" required>
                                <option value="Intermediate">Intermediate</option>
                                <option value="A Levels">A Levels</option>
                            </select>
                            <input type="hidden" id="getadvancequalification" value="@item.AdvAcadQual" />
                        </div>

                    </div>
                </div>
                <hr style="width:800px;" />
                <div class="row">
                    <h4 class="text-uppercase" style="margin-left:34px;">Higher Qualification</h4>
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-4">
                            <label>Professional Qualification</label>
                            <select name="qualification" class="form-control" id="qual" onchange="Qual_On_Change();">
                                <option value="CA(CAF)">CA(CAF)</option>
                                <option value="ACCA">ACCA</option>
                                <option value="BBA">BBA</option>
                                <option value="MBA">MBA</option>
                                <option value="B.Engineering">B.Engineering</option>
                            </select>
                        </div>
                        <div class="col-md-4" id="qualstatuscol">
                            <label>Qualification Status</label>
                            <select name="qualifystatus" class="form-control" id="qualstatus" onchange="Qualstatus_On_Change();">
                                <option value="Qualified">Qualified</option>
                                <option value="UnQualified">UnQualified</option>
                            </select>
                        </div>
                        <div class="col-md-4" id="gpa">
                            <label>GPA</label>
                            <input type="number" name="gpa" value="" id="postgpa" class="form-control" />

                        </div>
                        <div class="col-md-4" id="doqual">
                            <label>Date Of Qualification</label>
                            <input type="date" name="doq" value="" id="postdoq" class="form-control" />
                        </div>
                        <div class="col-md-4" id="nopleft">
                            <label>No Of Papers Left</label>
                            <input type="number" name="nopl" value="" id="postnopl" class="form-control" />
                        </div>
                        <div class="col-md-4" id="uni">
                            <label>University</label>
                            <input type="text" name="university" value="" id="postuni" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-4" id="msubjectcol">
                            <label>Major Subjects</label>
                            <select name="majorsubject" class="form-control" id="msubject" onchange="Msubject_On_Change();">
                                <option value="finance" id="moption">Finance</option>
                                <option value="supply chain" id="moption2">Supply Chain</option>
                                <option value="marketing media" id="moption3">Marketing Media</option>
                                <option value="administration" id="moption4">Administration</option>
                                <option value="electronics" id="bemoption">Electronics</option>
                                <option value="electrical" id="bemoption2">Electrical</option>
                                <option value="mechanical" id="bemoption3">Mechanical</option>
                                <option value="others" id="moption">Others(please specify)</option>
                            </select>
                        </div>
                        @*<div class="col-md-3" id="bemsubjectcol">
                                <label>Major Subjects</label>
                                <select name="majorsubject" class="form-control" id="bemsubject" onchange="BemSubject_On_Change();">

                                </select>
                            </div>*@
                        <div class="col-md-4" id="osubject">
                            <label>Others</label>
                            <input type="text" name="other" value="" id="postosubject" class="form-control" />
                        </div>

                    </div>
                </div>
                <hr style="width:800px;" />

                @*<div class="row">
                    <h4 class="text-uppercase" style="margin-left:34px;">Upload Your Ethlon CV</h4>
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-6">
                            <label>Upload CV</label>
                            <input type="file" name="file" class="form-control" />
                           
                        </div>
                    </div>
                </div>*@

                <hr style="width:800px;" />

                <div class="row">
                    <h4 class="text-uppercase" style="margin-left:34px;">Extra Curricular Activities</h4>
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-6">
                            <label>Extra Curricular Activities</label>
                            <input type="text" name="extracuri" value="@item.Extracuri" class="form-control" />
                            <label>Write multiple seperated by comma ','</label>
                        </div>
                        <div class="col-md-6">
                            <label>Achievements</label>
                            <input type="text" name="achievements" value="@item.Achivements" class="form-control" />
                            <label>Write multiple seperated by comma ','</label>
                        </div>

                    </div>
                </div>


                <hr style="width:800px;" />

                <div class="row">
                    <h4 class="text-uppercase" style="margin-left:34px;">Experience</h4>
                    <div class="col-md-12 mt-lg">
                        <div class="col-md-4" id="expstatuscol">
                            <label>Experience</label>
                            <select name="experiencestatus" class="form-control" id="expstatus" onchange="Exp_On_Change();">
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>

                        </div>
                        <div class="col-md-4" id="noyme">
                            <label>No Of Year Experience</label>
                            @*<input type="text" name="noymexp" value="" id="postnoyme" class="form-control" />*@
                            <select name="noymexp" id="postnoyme" class="form-control">
                                <option value="0-1">0-1 Year</option>
                                <option value="1-3 Years">1-3 Year</option>
                                <option value="3-5 Years">3-5 Year</option>
                                <option value="5 Years">More than 5 Year</option>
                            </select>
                            <input type="hidden" id="getpostnoyme" value="@item.NOYExperience" />
                        </div>
                        <div class="col-md-4" id="organiname">
                            <label>Organization Name</label>
                            <input type="text" name="orgname" value="@item.OrgName" id="orgname" class="form-control" />
                        </div>
                    </div>
                </div>

                <hr style="width:800px;" />
                <div class="row">
                    <div class="col-md-10">
                        <div class="col-md-10">
                            <input type="checkbox" id="agree" name="check" value="Agree">
                            <label for="agree">I agree that 25% of my first month salary will be paid to ethlon in case of my recruitment through this portal</label>
                            <p style="color:red;margin-left:20px;" id="error"></p>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info" id="save" style="margin-left:90px;">Save</button>
                        </div>
                    </div>
                </div>
            }
        }



    </div>
  
    <script src="~/scripts/toastr.min.js"></script>
    <script>
        $('#save').click(function () {
            if (!$('#agree').is(':checked')) {
                $('#error').text('please read and confirm our policy');
                return false;
            }
        });
        $('#agree').click(function () {
            if ($(this).prop("checked") == true) {
                $('#error').text('');
            }
            else {
                $('#error').text('please read and confirm our policy');
            }
        });
        
        $(function () {
            var a = '@TempData["successmessage"]';
            if (a != '')
                toastr.success("", a);
            //alert("ab" + a)

        })
    </script>

</body>
</html>

