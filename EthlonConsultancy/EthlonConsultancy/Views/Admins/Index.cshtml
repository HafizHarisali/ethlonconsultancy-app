@model IEnumerable<EthlonConsultancy.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
      <div class="col-lg-4"><h2>Admin & Manager</h2><a href="@Url.Action("Create","Admins")"><button class="btn" style="background-color:#d41e48; color:white;">Create</button></a></div>
      <div class="col-lg-4" align="right"><p style="margin-top:25px;">Search By Name</p></div>
        <div class="col-lg-4 mt-lg">

            @using (Html.BeginForm("Index", "Partners", FormMethod.Get))
            {
                <table>
                    <tr>
                        <td></td>
                        <td>
                            <input type="search" name="search" placeholder="Search..." value="" class="form-control" />

                        </td>
                        <td>
                            <button type="submit" class="searchButton form-control">
                                <i class="fa fa-search"></i>
                            </button>
                        </td>

                    </tr>
                </table>
            }
        </div>
    </div>

    <table class="table mt-lg">
        <tr style="background-color:#d41e48;color:white;">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                Admin Type
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminType.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit","Admins",new {id=item.Id })"><i class="fa fa-edit fa-fw"></i></a> |
                    <a href="@Url.Action("Details","Admins",new {id=item.Id })"><i class="fa fa-file-text-o"></i></a> |
                    <a href="@Url.Action("Delete","Admins",new {id=item.Id })"><i class="fa fa-trash-o fa-fw"></i></a> |

                </td>
            </tr>

        }

    </table>
